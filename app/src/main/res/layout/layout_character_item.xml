<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="character"
            type="com.ud.rickmortyinfo.ui.modules.episodes.models.Characters" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />

        <import type="com.ud.rickmortyinfo.ui.common.utils.Utils" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{onClick}"
        android:background="@drawable/recycler_selector"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/characterTitle"
            style="@style/Character_TextView_Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{character.name}"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorColorText"
            tools:text="Rick Sanchez" />

        <TextView
            android:id="@+id/characterGender"
            style="@style/Character_TextView_Title"
            app:layout_constraintTop_toBottomOf="@+id/characterTitle"
            app:layout_constraintStart_toStartOf="@+id/characterTitle"
            android:paddingBottom="@dimen/space_15"
            android:text="@{Utils.getSpannedHtml(@string/episode_character_gender_txt(character.gender))}"
            android:textColor="@color/colorPrimary"
            tools:text="Male" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_up_float"
            android:rotation="90"
            android:tint="@color/colorPrimary"
            android:layout_marginEnd="@dimen/space_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/characterTitle"
            app:layout_constraintBottom_toBottomOf="@+id/characterGender"
            tools:src="@android:drawable/arrow_down_float" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>