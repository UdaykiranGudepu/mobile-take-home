<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.ud.rickmortyinfo.ui.modules.episodes.viewmodels.EpisodesViewModel" />

        <variable
            name="layoutManager"
            type="androidx.recyclerview.widget.LinearLayoutManager" />

        <import type="com.ud.rickmortyinfo.ui.modules.episodes.models.Characters.Status" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:context=".ui.modules.episodes.views.EpisodesListFragment"
        android:background="@color/colorWhite">

        <include
            android:id="@+id/characters_sticky_header"
            layout="@layout/layout_character_header_item"
            bind:section="@{Status.ALIVE.toString()}"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/characters_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="@{layoutManager}"
            tools:listitem="@layout/layout_episode_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>